{
    "tasks": [
        {
            "type": "shell",
            "label": "CUDA C/C++: build active file",
            "command": "nvcc",
            "args": [
                "-g",
                "-G",
                "-ccbin",
                "g++",
                "-m64",
                "-gencode",
                "arch=compute_75,code=sm_75",
                "${file}",
                "-I${workspaceFolder}/Common",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}